{
  "name": "prompt-architect",
  "version": "1.0.0",
  "description": "Context-Aware Prompt Enhancer for Developers powered by Ollama",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "vite build",
    "preview": "vite preview",
    "copy:electron": "mkdir -p dist-electron && cp electron/main.cjs dist-electron/main.cjs && cp electron/preload.cjs dist-electron/preload.cjs",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && npm run copy:electron && sleep 1 && electron .\"",
    "generate:icon": "./scripts/generate-icon.sh",
    "generate:icon:win": "./scripts/generate-windows-icon.sh",
    "electron:build": "vite build && npm run copy:electron && electron-builder",
    "electron:build:mac": "vite build && npm run copy:electron && electron-builder --mac",
    "electron:build:mac:dmg": "vite build && npm run copy:electron && electron-builder --mac dmg",
    "electron:build:win": "vite build && npm run copy:electron && electron-builder --win",
    "electron:build:win:nsis": "vite build && npm run copy:electron && electron-builder --win nsis",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "keywords": [
    "electron",
    "react",
    "ollama",
    "prompt-engineering",
    "ai"
  ],
  "author": {
    "name": "Senol Dogan",
    "email": "contact@senoldogan.dev",
    "url": "https://www.senoldogan.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/senoldogann/Context-Aware-Prompt-Architect.git"
  },
  "bugs": {
    "url": "https://github.com/senoldogann/Context-Aware-Prompt-Architect/issues"
  },
  "homepage": "https://github.com/senoldogann/Context-Aware-Prompt-Architect#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7",
    "axios": "^1.6.2",
    "zod": "^3.22.4",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.promptarchitect.app",
    "productName": "Prompt Architect",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Senol Dogan"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}

